<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.filzah.insanpeduli.navHome">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:src="@drawable/menua"
            android:scaleType="centerCrop"
            android:background="@color/colorWhite"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icooon"
            android:id="@+id/imgprov"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama User"
            android:textSize="30sp"
            android:id="@+id/pronama"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/imgprov"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GmailUser@gmail.com"
            android:layout_below="@id/pronama"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/progmail"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PasswordUser"
            android:inputType="textPassword"
            android:layout_below="@id/progmail"
            android:textSize="20sp"
            android:id="@+id/propass"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You Ready to Donate! (:"
            android:layout_below="@id/propass"
            android:textSize="20sp"
            android:id="@+id/projoin"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp"
            android:text="Log Out"
            android:padding="10dp"
            android:background="@color/colorLight"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_below="@id/projoin"
            android:id="@+id/prologout"
            />

    </RelativeLayout>


</FrameLayout>
